{
    "name": "anouar/converter-cli",
    "description": "a prototype of a calculator that converts from decimal to binary and hexadecimal",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "build": "echo 'Build process complete.'",
        "validate": [
            "@php -l bin/calc.php",
            "@php -l src/Calculator.php",
            "@php -l src/ConverterInterface.php",
            "@php -l src/formatterTrait.php",
            "@php -l src/NumberConverter.php"
        ],
        "save": [
            "@validate",
            "echo 'Saving current state...'"
        ],
        "calc": "php bin/calc.php",
        "clean": "php -r \"file_put_contents('samples/output.json', ''); echo 'Cleared samples/output.json\\n';\"",
        "help": "php bin/calc.php --help",
        "generate-samples": "php bin/calc.php 5 & 3 --jsonout && php -r \"file_put_contents('samples/input.json', json_encode(['number' => 5, 'operator' => '&', 'number2' => 3], JSON_PRETTY_PRINT));\""
    },
    "require": {
        "php": ">=8.2"
    }
}